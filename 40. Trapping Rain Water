#include <bits/stdc++.h> 
long getTrappedWater(long *arr, int n){
    // Write your code here.
    vector<long>pre(n),suf(n);
    long ans=0ll;
    long maxv = 0;
    for(int i=0;i<n;i++)
    {
        maxv = max(maxv,arr[i]);
        pre[i] = maxv;
    }
    maxv=0;
    for(int i=n-1;i>=0;i--)
    {
        maxv  = max(maxv,arr[i]);
        suf[i] = maxv;
    }
    for(int i=0;i<n;i++)
    {
        long tempv = min(pre[i],suf[i]);
        if(arr[i]<tempv)
            ans += tempv-arr[i];
    }
    return ans;
}

// TC :- O(3N)
// SC :- O(2N)
